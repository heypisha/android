<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BookManager" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>

        <!-- Accent color. -->
        <item name="colorAccent">@color/accent</item>

        <!-- Background and surface colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/text_standard</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_standard</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <style name="Theme.BookManager" parent="Base.Theme.BookManager" />
</resources>
